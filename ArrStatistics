using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ArrStatistics
{
    class Program
    {
        static void Main(string[] args)
        {
            int[] Arr;
            Console.WriteLine("Enter the size of array:");
            Arr = new int[Convert.ToInt32(Console.ReadLine())];
            Console.WriteLine("Enter numbers of array one by one:");
            for (int i = 0; i < Arr.Length; i++)
            {
                Arr[i] = Convert.ToInt32(Console.ReadLine());
            }
            Console.WriteLine("Average is {0}", Arr.Average());
            Console.WriteLine("Maximum is {0} and it is {1} position in array.", Arr.Max(), Array.IndexOf(Arr, Arr.Max()) + 1);
            Console.WriteLine("Minimum is {0} and it is {1} position in array.", Arr.Min(), Array.IndexOf(Arr, Arr.Min()) + 1);
            
            int c = 0;            
            foreach (int x in Arr)
                if (x > 0) c++;
                
            Console.WriteLine("There is {0} positive numbers in array.", c);
            Console.ReadKey(); 
        }

    }

}

